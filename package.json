{
	"name": "cherish_recipes",
	"version": "1.0.0",
	"description": "Recipes web application for cooks to share their recipes and expertise with people, including ingredients and cooking steps.",
	"main": "server.js",
	"type": "module",
	"scripts": {
		"start": "node backend/server",
		"server": "nodemon backend/server",
		"frontend": "npm start --prefix frontend",
		"dev": "concurrently \"npm run server\" \"npm run frontend\"",
		"heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
	},
	"keywords": [
		"Recipes",
		"Cooking",
		"Meals",
		"Chefs"
	],
	"author": "Mehdi Ait Ouchrif",
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"cookie-parser": "^1.4.5",
		"cors": "^2.8.5",
		"dotenv": "^8.2.0",
		"express": "^4.17.1",
		"express-mongo-sanitize": "^2.0.2",
		"express-rate-limit": "^5.2.3",
		"helmet": "^4.4.1",
		"hpp": "^0.2.3",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.11.13",
		"morgan": "^1.10.0",
		"multer": "^1.4.2",
		"nodemailer": "^6.4.17",
		"xss-clean": "^0.1.1"
	},
	"devDependencies": {
		"concurrently": "^5.3.0",
		"nodemon": "^2.0.7"
	}
}
